{% extends "::ojsbase.html.twig" %}
{% block title %}{{ 'title.login'|trans }} {{ parent() }}{% endblock %}
{% set hideleft = true %}

{% block body %}
    {% if error is defined and error %}
        <span>{{ error }}</span>
    {% endif %}

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{ 'title.login'|trans }}</h3>
        </div>
        <div class="panel-body">
            {% for owner in hwi_oauth_resource_owners() %}
                <a href="{{ hwi_oauth_login_url(owner) }}" class="btn btn-primary btn-labeled btn-block btn-lg">
                    <span class="btn-label pull-left col-md-3 col-xs-3">
                        <i class="fa fa-{{ owner }} fa-key"></i>
                    </span>
                    {{ owner | trans({}, 'HWIOAuthBundle') }}
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock body %}
