{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.home'|trans }} {{ parent() }}{% endblock %}
{% set hideleft = 1 %}
{% block stylesheets %}
    {{ parent() }}
    {% stylesheets "@bxslider_css" output="assets/prod/js/bxslider.css" %}
    <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}

    <style type="text/css">
        #logo {
            max-height: 140px;
            max-width: 140px;
        }

        #stats {
            margin: 20px auto;
            width: 300px;
            text-align: center;
            color: #aaa;
        }

        #search_section {
            height: 100px;
            margin-top: 50px;
        }

        @media (max-width: 360px) {
            #homepage-buttons a {
                width: 220px;
                margin-top: 3px;
                text-align: left;
            }
        }

        .bx-wrapper {
            box-shadow: none;
            border: 1px solid #efefef;
            height: 20rem;
        }
    </style>
{% endblock %}
{% block body %}
    <div class="container">
        <section role="presentation">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 text-center">
                    <a href="{{ path("ojs_public_index") }}"><img id="logo" src="{{ ojs_logo }}"/></a>
                </div>
            </div>
        </section>
        <section role="search" id="search_section">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <form action="{{ path('ojs_search_index') }}" method="get">
                        <div class="input-group">
                            <input type="text" name="q" class="form-control" value=""
                                   placeholder="{{ "search.on.everywhere"|trans }}" id="q"/>
                            {# form_widget(switcher.journal) #}
                            <span class="input-group-btn">
                                        <button class="btn btn-primary" type="submit" title="{{ "search"|trans }}"><i
                                                    class="fa fa-search"></i></button>
                                    </span>
                        </div>
                        <input type="hidden" name="type" value="basic" id="search-type">
                    </form>
                    <div id="stats">
                        <dl class="home-stats">
                            <dd>
                                <span>{{ stats.journal|number_format(0,'.','.') }}</span>
                                <br>
                                {{ "journal"|trans }}
                            </dd>
                            <dd>
                                <span>{{ stats.article|number_format(0,'.','.') }}</span>
                                <br>
                                {{ "article"|trans }}
                            </dd>
                            <dd>
                                <span>{{ stats.user|number_format(0,'.','.') }}</span>
                                <br>
                                {{ "user"|trans }}
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </section>
        <section role="actions">
            <div class="row">
                <div class="col-md-12 col-xs-12">
                    <p id="homepage-buttons" class="text-center">
                        {% if not app.user %}
                            <a href="{{ path('fos_user_registration_register') }}"
                               class="btn btn-primary btn-labeled">
                                    <span class="btn-label pull-left">
                                        <i class="fa fa-user fa-fw"></i>
                                    </span>
                                {{ "register"|trans }}
                            </a>
                        {% endif %}

                        {% if publisherApplicationAllowance %}
                            <a href="{{ url("ojs_apply_publisher") }}"
                               class="btn btn-primary  btn-labeled">
                                    <span class="btn-label pull-left">
                                        <i class="fa fa-institution fa-fw"></i>
                                    </span>
                                {{ 'application.publisher.apply'|trans }}
                            </a>
                        {% endif %}
                        {% if journalApplicationAllowance %}
                            <a href="{{ url('ojs_apply_journal') }}" class="btn btn-primary btn-labeled">
                                    <span class="btn-label pull-left">
                                        <i class="fa fa-book fa-fw"></i>
                                    </span>
                                {{ "application.journal.apply"|trans }}
                            </a>
                        {% endif %}
                    </p>
                </div>
            </div>
        </section>
        <section role="presentation">
            <div class="row">
                <div class="col-xs-12">
                    <ul class="bxslider">
                        {% for announcement in announcements %}
                            <li>
                                {% if announcement.image is defined and announcement.image is not null %}
                                    <img src="{{ announcement.image|imagine_filter('announcement_croped') }}"
                                         alt="{{ announcement.title }}">
                                {% endif %}
                                {% if announcement.title is defined and announcement.title is not null %}
                                    <h3>{{ announcement.title }}</h3>

                                    {{ announcement.content|raw }}
                                {% endif %}

                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </section>
        <section role="featured">
            <h4 class="page-header text-success"><i class="fa fa-trophy"></i> {{ 'featured'|trans }}</h4>

            <div class="row">
                <div class="col-md-12 col-xs-12">
                    <div class="row">
                        {% for journal in journals %}
                            {% set journalDefault = journal.setDefaultLocale(app.request.defaultLocale) %}
                            {% include '::journal.html.twig' %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </section>
        {% if posts|length>0 %}
            <section role="posts">
                <div class="row">
                    <ul>
                        {% for post in posts %}
                            <li>
                                <a href="{{ path('ojs_site_post', {'slug': post.slug}) }}">{{ post.title }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </section>
        {% endif %}
        {% if services is defined %}
            {% include '@OjsSite/Site/services.html.twig' %}
        {% endif %}
        <!--
        <section role="topics">
            <h4 class="page-header text-info"><i class="fa fa-bookmark"></i> {{ "subject.plural"|trans }}</h4>

            <div class="row">
                <div class="col-md-12 col-xs-12 home-subject-tree">
                    {{ subjects|raw }}
                </div>
            </div>
        </section>
        -->
    </div>
{% endblock %}
{% image output="assets/prod/js/images/controls.png"
'%kernel.root_dir%/../web/vendor/bxslider-4/dist/images/controls.png' %}
{% endimage %}
{% image output="assets/prod/js/images/bx_loader.gif"
'%kernel.root_dir%/../web/vendor/bxslider-4/dist/images/bx_loader.gif' %}
{% endimage %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts "@bxslider_js" output="assets/prod/js/bxslider.js" %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        $(function () {
            $('.bxslider').bxSlider({
                video: false,
                useCSS: false,
                autoStart: false
            });
        });
    </script>
{% endblock %}
