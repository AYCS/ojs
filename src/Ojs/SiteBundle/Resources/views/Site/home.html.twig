{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.home'|trans }} {{ parent() }}{% endblock %}
{% set hideleft = 1 %}
{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
        #logo {
            max-height: 140px;
            max-width: 140px;
        }

        #stats {
            margin: 20px auto;
            width: 300px;
            text-align: center;
            color: #aaa;
        }

        #search_section {
            height: 100px;
            margin-top: 50px;
        }

        @media (max-width: 360px) {
            #homepage-buttons a {
                width: 220px;
                margin-top: 3px;
                text-align: left;
            }
        }
    </style>
{% endblock %}
{% block body %}
    <div class="container">
        <section role="presentation">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 text-center">
                    <a href="{{ path("ojs_public_index") }}"><img id="logo" src="{{ ojs_logo }}"/></a>
                </div>
            </div>
        </section>
        <section role="search" id="search_section">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <form action="{{ path('ojs_search_index') }}" method="get">
                        <div class="input-group">
                            <input type="text" name="q" class="form-control" value=""
                                   placeholder="{{ "search.on.everywhere"|trans }}" id="q"/>
                            {# form_widget(switcher.journal) #}
                            <span class="input-group-btn">
                                        <button class="btn btn-primary" type="submit" title="{{ "search"|trans }}"><i
                                                    class="fa fa-search"></i></button>
                                    </span>
                        </div>
                        <input type="hidden" name="type" value="basic" id="search-type">
                    </form>
                    <div id="stats">
                        <dl class="home-stats">
                            <dd>
                                <span>{{ stats.journal|number_format(0,'.','.') }}</span>
                                <br>
                                {{ "journal"|trans }}
                            </dd>
                            <dd>
                                <span>{{ stats.article|number_format(0,'.','.') }}</span>
                                <br>
                                {{ "article"|trans }}
                            </dd>
                            <dd>
                                <span>{{ stats.user|number_format(0,'.','.') }}</span>
                                <br>
                                {{ "user"|trans }}
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </section>
        <section role="actions">
            <div class="row">
                <div class="col-md-12 col-xs-12">
                    <p id="homepage-buttons" class="text-center">
                        {% if not app.user %}
                            <a href="{{ path('fos_user_registration_register') }}"
                               class="btn btn-primary btn-labeled">
                                    <span class="btn-label pull-left">
                                        <i class="fa fa-user fa-fw"></i>
                                    </span>
                                {{ "register"|trans }}
                            </a>
                        {% endif %}

                        {% if publisherApplicationAllowance %}
                            <a href="{{ url("ojs_apply_publisher") }}"
                               class="btn btn-primary  btn-labeled">
                                    <span class="btn-label pull-left">
                                        <i class="fa fa-institution fa-fw"></i>
                                    </span>
                                {{ 'application.publisher.apply'|trans }}
                            </a>
                        {% endif %}
                        {% if journalApplicationAllowance %}
                            <a href="{{ url('ojs_apply_journal') }}" class="btn btn-primary btn-labeled">
                                    <span class="btn-label pull-left">
                                        <i class="fa fa-book fa-fw"></i>
                                    </span>
                                {{ "application.journal.apply"|trans }}
                            </a>
                        {% endif %}
                    </p>
                </div>
                <div class="col-md-12 col-xs-12 text-center">

                </div>
            </div>
        </section>
        <section role="presentation">
            <div class="row">
                <div class="col-md-12">
                    <div class="content">
                        {% if announcement_count > 0 %}
                        <div id="announcement-carousel" class="carousel slide" data-ride="carousel">
                            <!-- Indicators -->
                            <ol class="carousel-indicators">
                                {% for i in 0..announcement_count - 1 %}
                                    {% if loop.first %}
                                        <li data-target="#announcement-carousel" data-slide-to="0"
                                            class="active"></li>
                                    {% else %}
                                        <li data-target="#announcement-carousel" data-slide-to="{{ i }}"></li>
                                    {% endif %}
                                {% endfor %}
                            </ol>

                            <!-- Wrapper for slides -->
                            <div class="carousel-inner">
                                {% for announcement in announcements %}
                                {% if loop.first %}
                                <div class="item active">
                                    {% else %}
                                    <div class="item">
                                        {% endif %}
                                        <div class="row">
                                            <div class="col-xs-2"></div>
                                            <div class="col-xs-3">
                                                {% if announcement.image is defined and announcement.image is not null %}
                                                    <img src="{{ announcement.image|imagine_filter('announcement_croped') }}">
                                                {% else %}
                                                    <h1>
                                                        <i class="fa fa-bullhorn"></i>
                                                    </h1>
                                                {% endif %}
                                            </div>
                                            <div class="col-xs-7">
                                                <h3>{{ announcement.title }}</h3>

                                                <p>{{ announcement.content|raw }}</p>
                                            </div>
                                        </div>
                                    </div>
                                    {% endfor %}
                                </div>
                                <!-- Controls -->
                                <a class="left carousel-control" href="#announcement-carousel"
                                   data-slide="prev">
                                    <span class="glyphicon glyphicon-chevron-left"></span>
                                </a>
                                <a class="right carousel-control" href="#announcement-carousel"
                                   data-slide="next">
                                    <span class="glyphicon glyphicon-chevron-right"></span>
                                </a>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section role="featured">
            <h4 class="page-header text-success"><i class="fa fa-trophy"></i> {{ 'featured'|trans }}</h4>

            <div class="row">
                <div class="col-md-12 col-xs-12">
                    <div class="row">
                        {% for journal in journals %}
                            {% set journalDefault = journal.setDefaultLocale(app.request.defaultLocale) %}
                            {% include '::journal.html.twig' %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </section>
        {% if posts|length>0 %}
            <section role="posts">
                <div class="row">
                    <ul>
                        {% for post in posts %}
                            <li>
                                <a href="{{ path('ojs_site_post', {'slug': post.slug}) }}">{{ post.title }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </section>
        {% endif %}
        {% if services is defined %}
            {% include '@OjsSite/Site/services.html.twig' %}
        {% endif %}
        <!--
        <section role="topics">
            <h4 class="page-header text-info"><i class="fa fa-bookmark"></i> {{ "subject.plural"|trans }}</h4>

            <div class="row">
                <div class="col-md-12 col-xs-12 home-subject-tree">
                    {{ subjects|raw }}
                </div>
            </div>
        </section>
        -->
    </div>
{% endblock %}
