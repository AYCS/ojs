<div class="submission-subform">
    {{ form_row(form.author.translations) }}
    {{ form_row(form.author.firstName) }}
    {{ form_row(form.author.lastName) }}
    {{ form_row(form.author.email) }}
    <button class="btn btn-info btn-sm toggle-author-detail">
        {{ 'details'|trans }}
        <i class="fa fa-arrow-down"></i>
    </button>
    <div class="author-details" style="display: none">
        {{ form_row(form.author.middleName) }}
        {{ form_row(form.author.firstNameTransliterated) }}
        {{ form_row(form.author.middleNameTransliterated) }}
        {{ form_row(form.author.lastNameTransliterated) }}
        {{ form_row(form.author.initials) }}
        {{ form_row(form.author.address) }}
        {{ form_row(form.author.publisher) }}
        {{ form_row(form.author.publisherNotListed) }}
        {{ form_row(form.author.publisherName) }}
        {{ form_row(form.author.country) }}
        {{ form_row(form.author.authorDetails) }}
    </div>
    <button type="button" class="btn btn-warning btn-sm submission-subform-remove-panel remove-articleauthor"><i class="fa fa-trash"></i></button>
</div>
