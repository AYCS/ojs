{% extends '::ojsbase.html.twig' %}
{% set hideleft = true %}
{% block title %}{{ 'file.edit'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
        {'link': path('ojs_admin_dashboard'), 'title': 'dashboard'|trans},
        {'link': path('ojs_admin_file_index'), 'title': 'file.edit'|trans},
        {'title': 'file.edit'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ "file.edit"|trans }}</h1>
    {% include '::flashbag.html.twig' %}
    {{ form(edit_form) }}
    <hr>
    {% set back_path = 'ojs_admin_file_index' %}
    {% if is_granted('DELETE', edit_form.vars.data) %}
        {% set delete_path = 'ojs_admin_file_delete' %}
    {% endif %}
    {% include '::actionbuttons.html.twig' %}
{% endblock %}
