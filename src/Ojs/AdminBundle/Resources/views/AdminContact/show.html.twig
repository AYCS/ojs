{% extends '::ojsbase.html.twig' %}
{% set hideleft = true %}
{% block title %}{{ 'title.contact_show'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
        {'link': path('ojs_admin_dashboard'), 'title': 'dashboard'|trans},
        {'link': path('ojs_admin_contact_index'), 'title': 'title.contacts'|trans},
        {'title': 'title.contact_show'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ 'journalcontact.singular'|trans }}
        <small>#{{ entity.id }}</small>
    </h1>
    {% include '::flashbag.html.twig' %}
    <table class="record_properties  table">
        <tbody>
        <tr>
            <th>{{ 'id'|trans }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "title"|trans }}</th>
            <td>{{ entity.title }}</td>
        </tr>
        {% if entity.contactType is not null %}
            <tr>
                <th>{{ 'contact.type'|trans }}</th>
                <td>{{ entity.contactType.name }} - {{ entity.contactType.description }}</td>
            </tr>
        {% endif %}
        <tr>
            <th>{{ "firstname"|trans }}</th>
            <td>{{ entity.firstName }}</td>
        </tr>
        <tr>
            <th>{{ "lastname"|trans }}</th>
            <td>{{ entity.lastName }}</td>
        </tr>
        <tr>
            <th>{{ "adress"|trans }}</th>
            <td>{{ entity.address }}</td>
        </tr>
        <tr>
            <th>{{ "country"|trans }}</th>
            <td>{{ entity.city.country.name }}</td>
        </tr>
        <tr>
            <th>{{ "city"|trans }}</th>
            <td>{{ entity.city.name }}</td>
        </tr>
        <tr>
            <th>{{ "phone"|trans }}</th>
            <td>{{ entity.phone }}</td>
        </tr>
        <tr>
            <th>{{ "fax"|trans }}</th>
            <td>{{ entity.fax }}</td>
        </tr>
        <tr>
            <th>{{ "email"|trans }}</th>
            <td>{{ entity.email }}</td>
        </tr>
        </tbody>
    </table>

    {{
        actions({
            'back': {'href': path('ojs_admin_contact_index')},
            'edit': {'href': path('ojs_admin_contact_edit', {'id': entity.id})},
            'delete': {'href': path('ojs_admin_contact_delete', {'id': entity.id}), 'attributes': {'data-token': token}},
        })
    }}

{% endblock %}
