{% extends 'knp_menu.html.twig' %}

{% block linkElement %}
    <a href="{{ item.uri }}" class="btn btn-primary btn-labeled btn-block btn-lg top5">
        <span class="btn-label pull-left col-md-3 col-xs-3">
            <i class="fa fa-{{ item.extras.icon }}"></i>
        </span>
        {{ block('label')|trans }}
        {% if item.extras.unreadFeedbackCount is defined and item.extras.unreadFeedbackCount > 0 %}
            <span class="badge">{{ item.extras.unreadFeedbackCount }}</span>
        {% endif %}
    </a>
{% endblock %}