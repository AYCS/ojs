{% extends '::ojsbase.html.twig' %}
{% set hideleft = true %}
{% block title %}{{ 'title.publisher_managers_show'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
        {'link': path('ojs_admin_dashboard'), 'title': 'dashboard'|trans},
    { 'link': path('ojs_admin_publisher_managers_index'),'title': 'title.publisher_managers'|trans},
    {'title': 'title.publisher_managers_show'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ 'publisher.manager'|trans }}</h1>
    {% include '::flashbag.html.twig' %}
    <table class="record_properties  table">
        <tbody>
        <tr>
            <th>{{ 'id'|trans }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "name"|trans }}</th>
            <td>{{ entity.user.username }}</td>
        </tr>
        <tr>
            <th>{{ "publisher"|trans }}</th>
            <td>{{ entity.publisher.name }}</td>
        </tr>
        </tbody>
    </table>
    {% set back_path = 'ojs_admin_publisher_managers_index' %}
    {% if is_granted('EDIT', entity) %}
        {% set edit_path = 'ojs_admin_publisher_managers_edit' %}
    {% endif %}
    {% if is_granted('DELETE', entity) %}
        {% set delete_path = 'ojs_admin_publisher_managers_delete' %}
    {% endif %}
    {% include '::actionbuttons.html.twig' %}
{% endblock %}
